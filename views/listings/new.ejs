<% layout("/layouts/boilerplate.ejs") %>

  <body>
    <div class="row new">
      <div class="col-8 offset-2">
        <h2>Create a new listing</h2>
        <form class="needs-validation" method="POST" action="/listing" enctype="multipart/form-data" novalidate>
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required/>
            <div class="valid-feedback">title looks good!</div>
          </div><br>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="listing[description]" placeholder="enter description"></textarea>
          </div><br>
          <!-- <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control"/>
          </div><br> -->
          <div class="mb-3">
            <label for="image" class="form-label">Upload listing image</label>
            <input name="listing[image]"  type="file" class="form-control" required/>
          </div><br>
          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label">Price</label>
              <input class="form-control" name="listing[price]" placeholder="enter price"  required/>
              <div class="invalid-feedback">please enter a valid price</div>
            </div><br>
            <div class="mb-3 col-md-8">
              <label for="country" class="form-label">Country</label>
              <input class="form-control" name="listing[country]" placeholder="enter country" type="text" required/>
              <div class="invalid-feedback">please enter the country name</div>
            </div>
          </div><br>

          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input class="form-control" name="listing[location]" placeholder="enter location" type="text" required/>
            <div class="invalid-feedback">please enter the location</div>
          </div><br>
          <center><button class="btn btn-dark add-btn">Add</button></center><br>
        </form>
      </div>
    </div>
  </body>